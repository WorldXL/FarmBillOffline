                android:fontFamily="@font/roboto_medium"
                android:textSize="30sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="16sp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>