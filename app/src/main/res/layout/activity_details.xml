                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/extra_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingLeft="16sp"
                    />
                <TextView
                    android:id="@+id/extra_value"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/labour_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Labour"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingLeft="16sp"
                    />
                <TextView
                    android:id="@+id/labour_value"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/transport_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingLeft="16sp"
                    />
                <TextView
                    android:id="@+id/transport_value"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/weight_machine_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight Machine"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingLeft="16sp"
                    />
                <TextView
                    android:id="@+id/weight_machine_value"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cob_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cost of a Bag"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingLeft="16sp"
                    />
                <TextView
                    android:id="@+id/cob_value"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22sp"
                    android:paddingTop="17sp"
                    android:paddingRight="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/total_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"
